<%- include('header') %>

    <h1 class="text-3xl font-bold text-gray-800 mb-8">Edit Device</h1>

    <div class="bg-white p-8 rounded-lg shadow-sm mb-8">
        <form action="/master-data/update" method="POST">
            <input type="hidden" name="originalDeviceId" value="<%= device.deviceId %>">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
                <div class="form-group">
                    <label class="block text-gray-700 font-medium mb-2">Device ID (IMEI/Serial)</label>
                    <input type="text" name="deviceId" value="<%= device.deviceId %>" required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition">
                </div>
                <div class="form-group">
                    <label class="block text-gray-700 font-medium mb-2">Unit Name / Plate No</label>
                    <input type="text" name="name" value="<%= device.name %>" required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition">
                </div>
                <div class="form-group">
                    <label class="block text-gray-700 font-medium mb-2">Branch</label>
                    <input type="text" name="branch" value="<%= device.branch %>" required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition">
                </div>
                <div class="form-group">
                    <label class="block text-gray-700 font-medium mb-2">Division</label>
                    <input type="text" name="division" value="<%= device.division %>" required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition">
                </div>
                <div class="form-group">
                    <label class="block text-gray-700 font-medium mb-2">Subscription Type</label>
                    <select name="type"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition">
                        <option value="GPS Only" <%=device.type==='GPS Only' ? 'selected' : '' %>>GPS Only</option>
                        <option value="GPS + Fuel" <%=device.type==='GPS + Fuel' ? 'selected' : '' %>>GPS + Fuel
                        </option>
                        <option value="Personal Tracker" <%=device.type==='Personal Tracker' ? 'selected' : '' %>
                            >Personal Tracker</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="block text-gray-700 font-medium mb-2">Status</label>
                    <select name="status"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition">
                        <option value="Active" <%=device.status==='Active' ? 'selected' : '' %>>Active</option>
                        <option value="Rusak" <%=device.status==='Rusak' ? 'selected' : '' %>>Rusak</option>
                        <option value="Hilang" <%=device.status==='Hilang' ? 'selected' : '' %>>Hilang</option>
                    </select>
                </div>
                <div class="form-group">
                    <label class="block text-gray-700 font-medium mb-2">Start Date</label>
                    <input type="date" name="subStartDate" value="<%= device.subStartDate %>" required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition">
                </div>
                <div class="form-group">
                    <label class="block text-gray-700 font-medium mb-2">End Date</label>
                    <input type="date" name="subEndDate" value="<%= device.subEndDate %>" required
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition">
                </div>
            </div>
            <div class="flex gap-4">
                <button type="submit"
                    class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-6 rounded transition duration-300">Update
                    Device</button>
                <a href="/master-data"
                    class="bg-gray-500 hover:bg-gray-600 text-white font-semibold py-2 px-6 rounded transition duration-300">Cancel</a>
            </div>
        </form>
    </div>

    <%- include('footer') %>