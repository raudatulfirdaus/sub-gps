<%- include('header') %>

    <div class="text-center mb-10">
        <h1 class="text-4xl font-bold text-gray-800 mb-2">GPS Reconciliation Dashboard</h1>
        <p class="text-gray-600">Welcome to the GPS Device Management and Reconciliation System.</p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
        <div class="bg-white p-6 rounded-lg shadow-sm text-center">
            <h3 class="text-4xl font-bold text-blue-500 mb-2">
                <%= deviceCount %>
            </h3>
            <p class="text-gray-500 font-medium">Total Devices</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm text-center">
            <h3 class="text-4xl font-bold text-blue-500 mb-2">
                <%= logCount %>
            </h3>
            <p class="text-gray-500 font-medium">Service Logs</p>
        </div>
        <div class="bg-white p-6 rounded-lg shadow-sm text-center">
            <h3 class="text-4xl font-bold text-green-500 mb-2">Active</h3>
            <p class="text-gray-500 font-medium">System Status</p>
        </div>
    </div>

    <div class="bg-white p-8 rounded-lg shadow-sm">
        <h2 class="text-2xl font-semibold text-gray-800 mb-6 border-b pb-2">Quick Actions</h2>
        <div class="flex flex-wrap gap-4 justify-center">
            <a href="/master-data"
                class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-6 rounded transition duration-300">Manage
                Devices</a>
            <a href="/service-logs"
                class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-6 rounded transition duration-300">Log
                Service</a>
            <a href="/report"
                class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-2 px-6 rounded transition duration-300">Generate
                Report</a>
        </div>
    </div>

    <%- include('footer') %>